{
  "compilerOptions": {
    "outDir": "dist/",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "lib": [
      "dom",
      "es2015"
    ]
  },
  "include": [
    "dist/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}